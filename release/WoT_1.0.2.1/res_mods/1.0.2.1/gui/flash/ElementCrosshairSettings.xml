<mmms>
  <config>
    <common>
	  <illuminatedSight>true</illuminatedSight>
	  <illuminateKey>KEY_N</illuminateKey>
	  <illuminateModifier>MODIFIER_SHIFT</illuminateModifier> <!-- KEY_NONE, MODIFIER_SHIFT, MODIFIER_CTRL, MODIFIER_ALT -->
      <illuminateColor>180 0 180</illuminateColor>
	  <aimtime>true</aimtime>
      <flighttime>false</flighttime>
      <targetspeed>true</targetspeed>
      <targetspeedKMH>true</targetspeedKMH> <!-- TODO: Not yet implimented -->
      <targetspeedMPH>false</targetspeedMPH> <!-- TODO: Not yet implimented -->
      <targetspeedMPS>false</targetspeedMPS> <!-- TODO: Not yet implimented -->
      <targetreload>true</targetreload>
      <showPiercingPower>true</showPiercingPower>
      <showAdvancedPiercingPower>true</showAdvancedPiercingPower>
      <showPenValues>true</showPenValues>
      <showHitAngle>true</showHitAngle>
      <useXRay>true</useXRay> <!-- TODO: Not yet implimented -->
      <useBBox>true</useBBox> <!-- TODO: Not yet implimented -->
      <scalar>2.0</scalar> <!-- TODO: Not yet implimented -->
      <debug>true</debug>
	  <ignoreCompatibility>true</ignoreCompatibility>
	  <versionCheck>false</versionCheck>
    </common>
    <arcade>
      <degree2pix>16</degree2pix>  <!-- Pixels to angle degre ratio, default is: 1' = 16px -->
      <viewRangeMultiple>1.00</viewRangeMultiple>  <!-- Range Multiplier, used to calculate color of Range display. *can be modified to simulate effect of used modules, crew rank etc. -->
      <reloadMultiple>0.865</reloadMultiple>  <!-- Opponent Reload Time Multiplier, used to calculate color of Opponent Reload Time display. *can be modified to simulate effect of used modules, crew rank etc. -->
      <reticle>36</reticle>  <!-- Target's speed threshold. According to this value, the circle's will be drawn to assist you to aim moving targets at this speed level. -->
      <reticle>72</reticle>
    </arcade>
    <sniper>
      <removeBinocs>true</removeBinocs>
      <reticle>36</reticle>  <!-- Target's speed threshold. According to this value, the circles will be drawn to assist you to aim moving targets at this speed levels. -->
      <reticle>72</reticle>  
    </sniper>
    <strategic>
      <relativeMode>true</relativeMode>
      <relOffset>0.4</relOffset>
      <timeout>5.0</timeout>
      <m2pix>8.5</m2pix>  <!-- Pixels to distance ratio, default is: 1m = 8.2px -->
      <angle>true</angle>  <!-- Elevation angle panel display: ON = true / OFF = false-->
      <maxDistance>true</maxDistance>  <!-- Max distance panel display: ON = true / OFF = false -->
      <extraInfo>true</extraInfo>  <!-- Extra info panel display: ON = true / OFF = false -->
      <center>true</center>  <!-- Central marker display ON: = true / OFF = false -->
      <circle>24</circle>  <!-- Target's speed threshold. According to this value, the circles will be drawn to assist you to aim moving targets at this speed levels. -->
      <circle>48</circle>  <!-- Size of circles being drawn in strategic mode is now dependent on the size of the map and the current zoom level of the Camera. --> 
    </strategic>
  </config>
</mmms>